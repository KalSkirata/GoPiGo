<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ziri.gopigo_new.MainMenu"
    android:gravity="center"
    android:textAlignment="center">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu Gopigo"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Video Stream"
        android:id="@+id/video_stream"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/textView"
        android:padding="20dp"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Graph"
        android:id="@+id/graph"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/textView"
        android:padding="20dp"
        />


    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Local data from BDD"
        android:id="@+id/local_bdd_data"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/textView"
        android:padding="20dp"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="RPI data"
        android:id="@+id/rpi"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/textView"
        android:padding="20dp"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Synchronise BDD"
        android:id="@+id/sync"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/textView"
        android:padding="20dp"
        />

</LinearLayout>